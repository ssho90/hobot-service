      summary: 아파트 매매 실거래 자료 조회
      parameters:
        - name: serviceKey
          in: query
          required: true
          schema:
            type: string
          description: 공공데이터포털 인증키 (Decoding된 키 권장)
        - name: LAWD_CD
          in: query
          required: true
          schema:
            type: string
            pattern: '^\d{5}$'
          description: 지역코드 5자리 (예: 11110)
        - name: DEAL_YMD
          in: query
          required: true
          schema:
            type: string
            pattern: '^\d{6}$'
          description: 계약년월 6자리 (YYYYMM)
        - name: pageNo
          in: query
          schema:
            type: integer
            default: 1
        - name: numOfRows
          in: query
          schema:
            type: integer
            default: 10
